    pipeline {
        agent {
            docker {
                image 'openjdk:21-jdk'  // docker for Java 
                image 'maven:3-alpine' // Using a lightweight Maven image


            }
        }
        stages {
            stage('Build') {
                steps {
                    sh 'java -version' // Verify Java version
                    sh 'mvn -version' // Example build command
                }
            }
            stage('Test') {
                steps {
                    echo 'mvn test' // Example test command
                }
            }
        }
    }
