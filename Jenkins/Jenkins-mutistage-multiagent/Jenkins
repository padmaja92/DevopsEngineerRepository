pipeline {
    agent none // No global agent, stages define their own
    stages {
        stage('Back-end') {
            agent {
                dockerContainer { // Use dockerContainer instead of docker
                    image 'maven:3.8.1-adoptopenjdk-11'
                }
            }
            steps {
                sh 'mvn --version'
            }
        }
        stage('Front-end') {
            agent {
                dockerContainer { // Use dockerContainer instead of docker
                    image 'node:16-alpine'
                }
            }
            steps {
                sh 'node --version'
            }
        }
        stage('DB') {
            agent {
                dockerContainer { // Use dockerContainer instead of docker
                    image 'mysql:latest'
                }
            }
            steps {
                echo 'Steps to configure SQL DB and queries'
            }
        }
    }
}
